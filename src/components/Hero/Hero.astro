---
import { Image } from "astro:assets";
import Button from "@components/Button/Button.astro";
import carHero from "@images/carHero.png";
import heroData from "../../data/heroData.json.ts";

const { title, description, CTA } = heroData;
---

<section
  id="hero"
  class="scroll-animation relative z-10 flex min-h-[80lvh] w-full items-center bg-hero-gradient"
>
  <div class="site-container relative flex flex-col-reverse gap-10 px-4 lg:flex-row md:items-center md:justify-between pt-28 md:pt-20">


    <!-- Hero Image -->
    <div class="col md:max-w-lg lg:max-w-xl w-full">
        <p class="col px-4 mb-8 text-lg  md:text-xl max-w-sm">
          {description}
        </p>
      <Image
        src={carHero}
        alt="Grey Black Car Photo"
        class=" object-cover w-full h-auto"
        widths={[320, 640, 960, 1200]}
        sizes="(max-width: 768px) 100vw, 50vw"
        loading="lazy"
      />
    </div>
    
    <!-- Hero Text -->
    <div class="items-start flex flex-col md:max-w-lg">
      <h1 class="col px-4 font-heading-1  text-[#3b2f2f] md:text-6xl uppercase leading-20">
        {title}
      </h1>
      <div class="col px-4 mt-8">
        <Button
          variant="primary"
          arrow="right"
          href="/#contact"
          class="text-xl gap-2  md:text-2xl"
        >
          {CTA}
        </Button>
      </div>
    </div>
  </div>
    <!--- Call me Now -->
    <div class="bg-primary-200 flex gap-10 absolute bottom-0 left-0 w-full p-5 h-auto items-center justify-center shadow-2xl">
      <div class="flex flex-col">
        <p>Call Me Now:</p>
        <p>407-497-2285</p>
      </div>
      <div class="flex flex-col">
          <p>Our Location</p>
          <p>Orlando</p>
      </div>

    </div>
</section>
