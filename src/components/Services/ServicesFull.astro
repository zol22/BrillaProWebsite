---
import { services } from "../../data/services.json.ts";
import { Image } from "astro:assets";
---

<div class="flex flex-col md:flex-row flex-wrap gap-10 items-center justify-center mt-5 p-5">

  {services.map((service) => (
    <div class="group w-full md:w-[45%] flex flex-col p-5 border-2 border-primary-100/30 shadow-2xl rounded-xl overflow-hidden">
        <div class="aspect-video w-full overflow-hidden">
            <Image
          src={service.image}
          alt={service.name}
          class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
            />
        </div>

      <!-- Service Content -->
      <div class="p-3">
        <h2 class="font-semibold text-primary-100">{service.name}</h3>

        <ul class="mt-4 flex flex-col gap-2 text-sm text-base-800">
          {service.features.map((feature) => (
            <li class="leading-snug lg:text-base">âœ… {feature}</li>
          ))}
        </ul>

        <p class="font-decorative text-primary-700 mt-6 text-2xl">${service.price}</p>
      </div>
    </div>
  ))}
</div>
