---
// components/ServiceCard.astro
const { name, features, price, image } = Astro.props;
---

<div class="rounded-xl shadow-lg bg-white border overflow-hidden">
  <img src={image.src} alt={name} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{name}</h3>
    <ul class="list-disc pl-5 text-sm text-gray-700 mb-4 space-y-1">
      {features.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
    <div class="text-lg font-bold text-primary-600">Starting at ${price}</div>
  </div>
</div>
