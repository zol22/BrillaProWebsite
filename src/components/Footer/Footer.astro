		<!-- footer links -->
		<div
			class="flex flex-col md:flex-row w-full justify-center gap-2 text-lg items-center "
		>
			{
				footerData.map((footer)=> (
					<FooterLink href={footer.link}>{footer.text}</FooterLink>
				))
			}
	
		</div>

		<!-- lets connect -->
		<div class="mx-auto mt-6 max-w-[40rem] px-4 text-center opacity-80">
