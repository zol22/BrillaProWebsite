---
import { type CollectionEntry } from "astro:content";
import { ClientRouter } from "astro:transitions";

// component imports
import Seo from "@components/Seo/Seo.astro";

// data
import siteData from "@config/siteData.json";

export interface Props {
	type?: "general" | undefined;
	title: string;
	description: string;
	image?: ImageMetadata;
	noindex?: boolean;
}

const { type = "general", title, description, image, noindex = false } = Astro.props as Props;

import CormorantSC from "@fontsource/cormorant-sc/files/cormorant-sc-latin-400-normal.woff2";
import JosefinSlab from "@fontsource/josefin-slab/files/josefin-slab-latin-400-normal.woff2";
import DMSans from "@fontsource/dm-sans/files/dm-sans-latin-400-normal.woff2";
import CinzelDecorative from "@fontsource/cinzel-decorative/files/cinzel-decorative-latin-400-normal.woff2";
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" , initial-scale="1.0" />

<!-- local font preload for better performance when not using ClientRouter -->
<link rel="preload" href={CormorantSC} as="font" type="font/woff2" crossorigin="anonymous" />
<link rel="preload" href={JosefinSlab} as="font" type="font/woff2" crossorigin="anonymous" />
<link
	rel="preload"
	href={DMSans}
	as="font"
	type="font/woff2"
	crossorigin="anonymous"
/>
<link rel="preload" href={CinzelDecorative} as="font" type="font/woff2" crossorigin="anonymous" />

<!-- Favicon & App Icons -->
<link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />
<link rel="apple-touch-icon" href="/favicons/apple-touch-icon.png" />

<!-- Android Web App Icons -->
<link rel="icon" type="image/png" sizes="192x192" href="/favicons/android-chrome-192x192.png" />
<link rel="icon" type="image/png" sizes="512x512" href="/favicons/android-chrome-512x512.png" />

<!-- other -->
<meta name="generator" content={Astro.generator} />
<link rel="sitemap" href="/sitemap-index.xml" />

<meta name="google-site-verification" content="x24yYGOWzPk_sJ1iSveY369EfyahcfTVNaA6FPmVTk8" />

<script type="application/ld+json">
	{
	  "@context": "https://schema.org",
	  "@type": "LocalBusiness",
	  "name": "BrillaPro Solutions",
	  "image": "https://brillapro.com/images/brillaprologo.png",
	  "@id": "https://brillapro.com",
	  "url": "https://brillapro.com",
	  "telephone": "+1-973-874-8155",
	  "address": {
		"@type": "PostalAddress",
		"addressLocality": "Orlando",
		"addressRegion": "FL",
		"addressCountry": "US"
	  },
	  "openingHoursSpecification": {
		"@type": "OpeningHoursSpecification",
		"dayOfWeek": [
		  "Monday",
		  "Tuesday",
		  "Wednesday",
		  "Thursday",
		  "Friday"
		],
		"opens": "10:00",
		"closes": "19:00"
	  },
	  "sameAs": [
		"https://www.instagram.com/brillaprosolutions",
		"https://www.facebook.com/brillaprosolutions"
	  ],
	  "description": "BrillaPro Solutions provides professional car detailing, pressure washing, and upholstery cleaning in Orlando and surrounding areas."
	}
  </script>
  

<Seo type={type} title={title} description={description} image={image} noindex={noindex} />

<!-- no fallback as I saw issues with firefox fallback -->
{siteData.useViewTransitions && <ClientRouter fallback="none" />}
